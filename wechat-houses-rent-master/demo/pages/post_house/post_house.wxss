.page{height:100%}
.image-group {
  display: flex;
  white-space: nowrap;
  margin-bottom: 20px;
  margin-top: 10px;
}

.image-group view{
  display: inline-block;
  flex-direction: row;
  width: 485rpx;
  height: 300rpx;
  margin-right: 20rpx;
  background-color: #f2f2f2;
}

.image-group view image{
  width: 100%;
  height: 100%;
  margin-left: 10px;
  align-items: center;
}

.image-group view icon{
  display: inline-block;
  vertical-align: top;
  position: relative
}

.pos{
  top: 20rpx;
  right: 80rpx;
}

.add_icon{
  width: 300rpx;
  height: 150rpx;
  border: dashed 2px rgba(92, 92, 92, 0.905);
  border-radius: 5px;
  margin-left: 10px;
}

.img_upload{
  height: 70rpx;
  width: 70rpx;
