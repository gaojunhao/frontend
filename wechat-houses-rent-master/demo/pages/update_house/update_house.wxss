/* pages/post_house/post_house.wxss */
.page{height:100%;width:100%;overflow-x:hidden;}
.image-group {
  display: flex;
  white-space: nowrap;
  margin-bottom: 20px;
  margin-top: 40px;
}

.image-group view{
  display: inline-block;
  flex-direction: row;
  width: 485rpx;
  height: 300rpx;
  margin-right: 20rpx;
  background-color: #f2f2f2;
}

.image-group view image{
  width: 100%;
  height: 100%;
  margin-left: 10px;
  align-items: center;
}

.image-group view icon{
  display: inline-block;
  vertical-align: top;
  position: relative
}

.pos{
  top: 20rpx;
  right: 80rpx;
}

.add_icon{
  width: 300rpx;
  height: 150rpx;
  border: dashed 2px rgba(92, 92, 92, 0.905);
  border-radius: 5px;
  margin-left: 10px;
}

.img_upload{
  height: 70rpx;
  width: 70rpx;
}

.playerInfo{
  margin: 20rpx 20rpx 0 20rpx;
  margin-bottom: 20px;
}

.video{
  border :2rpx solid #cccccc;
}
.videoContent{
  display: flex;
  align-items: center;
  justify-content: center;
  width:100%;
  height: 324rpx;
  position: relative;
}
/*播放小图标*/
.playImg{
  position: absolute;
  top: 36%;
  left:46%;
  width:64rpx;
  height: 64rpx;
}
.footerbtn{
  display: flex;
  margin-top: 20rpx;
}
.button{
  width:40%;
}
.videoUrlResult{
  width: 100%;
  margin-top: 20rpx;
}
.videoUrlResult .title{ 
  font-size: 28rpx;
  font-weight: bold;
  color: red;
  margin-left: 20rpx;
}

.btncontainer {
  display: flex;
  flex-direction: row;
  margin-top: 20rpx;
  margin-left: 20rpx;
  margin-bottom: 40rpx;
}

.t1{
  margin-left: 10rpx;
}
 
.t2{
  margin-left: 10rpx;
}
